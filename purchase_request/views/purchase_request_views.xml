<odoo>
    <data>

        <record id="view_purchase_request_tree" model="ir.ui.view">
            <field name="name">purchase.request.tree</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="requested_by"/>
                    <field name="start_date"/>
                    <field name="status"/>
                </list>
            </field>
        </record>

        <record id="view_purchase_request_form" model="ir.ui.view">
            <field name="name">purchase.request.form</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <form edit="is_editable == 0">
                    <sheet>
                        <header>
                            <!-- Draft State -->
                            <button name="action_submit_for_approval" string="Submit for Approval"
                                    type="object" class="btn-success"
                                    invisible="status !=  'draft'"/>

                            <button name="action_cancel_request" string="Cancel"
                                    type="object" class="btn-secondary"
                                    invisible="status != 'draft'"/>

                            <!-- Approval State -->
                            <button name="action_approve" string="Approve"
                                    type="object" class="btn-success"
                                    invisible="status not in  ['to_be_approve']"/>

                            <button name="action_reject" string="Reject"
                                    type="object" class="btn-danger"
                                    invisible="status not in  ['to_be_approve']"/>

                            <!-- Cancelled State -->
                            <button name="action_reset_to_draft" string="Reset to Draft"
                                    type="object" class="btn-secondary"
                                    invisible="status not in ['cancel','to_be_approve']"/>

                            <field name="status" widget="statusbar"/>
                        </header>

                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>

                        <group>
                            <field name="requested_by"/>
                            <field name="start_date"/>
                            <field name="end_date" invisible="1"/>
                            <field name="reason"/>
                        </group>

                        <notebook>
                            <page string="Request Lines" edit="is_editable == 0">
                                <field name="order_lines_ids">
                                    <list editable="bottom">
                                        <field name="product_id"/>
                                        <field name="description"/>
                                        <field name="quantity"/>
                                        <field name="cost_price"/>
                                        <field name="total"/>
                                    </list>
                                </field>
                                <group>
                                    <field name="total_price"/>
                                </group>

                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!--     actions opening views on models-->

        <record model="ir.actions.act_window" id="purchase_menu_action">
            <field name="name">purchase.view.action</field>
            <field name="res_model">purchase.request</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="oe_nocontent_smiling_face">
                    Add purchase...
                </p>
            </field>
        </record>


        <!-- actions -->

        <menuitem name="Purchase"
                  id="purchase_menu_item"
                  parent="purchase_request_base_menu"
                  action="purchase_menu_action"/>

    </data>
</odoo>
